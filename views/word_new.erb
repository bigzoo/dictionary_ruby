<form class="form-horizontal" action="/word/saved" method="post">
  <div class="well">
    <div class="form-group">
      <label for="word" class="col-sm-2 control-label">Enter a Word.</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="word" name="word" placeholder="Word" required>
      </div>
    </div>
    <div class="well">
      <div class="form-group">
        <label for="definition" class="col-sm-2 control-label">Add a definition for this word now?</label>
        <small class="text-muted">You can leave this blank to add a definition later.</small>
        <div class="col-sm-10">
          <textarea type="text" class="form-control" id="definition" name="definition"></textarea>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Add word to dictionary.</button>
      </div>
    </div>
  </div>
</form>
