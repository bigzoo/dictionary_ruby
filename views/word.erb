<h3>You are viewing "<%=@word.word%>"</h3>
<hr>
<form class="form-horizontal" action="/definition/saved" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>
  <div class="form-group">
    <label for="definition" class="col-sm-2 control-label">Add a definition.</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="definition" name="definition" placeholder="Definition">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add definition.</button>
    </div>
  </div>
</form>
<hr>
<a href="/">View all words in dictionary.</a>
